generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  cart     Int[]
}

model SneakersCard {
  id            Int      @id @default(autoincrement())
  title         String
  images        String[]
  price         Int
  previousPrice Int
  rate          Float
  createdAt     DateTime @default(now())
}

model Tokens {
  id            Int      @id @default(autoincrement())
  user_id       Int
  access_token  String
  refresh_token String
  created_at    DateTime @default(now())
}
